{
  "compilerOptions": {
    "target": "es2021",                                  
    "module": "CommonJS",                                
    "rootDir": "./src",                                  

    "sourceMap": false,
    "outDir": "./dist/",                                   
    "removeComments": true,                           
    "noEmitOnError": true,                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "strictFunctionTypes": true,                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
